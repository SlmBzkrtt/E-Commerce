@model IEnumerable<string>
<li>
    <a class="btn btn-block" asp-action="Index"
       asp-controller="Home" asp-route-category="" asp-route-productPage="-7">
        AnaSayfa
    </a>
</li>
@{
    bool durum = true;
    foreach (string category in Model)
    {
        if (category == ViewBag.SelectedCategory)
        {
            durum = false;
            break;
        }
    }
}
@if (durum)
{
    <li class="active">
        <a class="btn btn-block" asp-action="Index"
           asp-controller="Home" asp-route-category="Hepsi" asp-route-productPage="-6">
            Hepsi
        </a>
    </li>
}
else
{
    <li>
        <a class="btn btn-block" asp-action="Index"
           asp-controller="Home" asp-route-category="Hepsi" asp-route-productPage="-6">
            Hepsi
        </a>
    </li>
}

@foreach (string category in Model)
{<li class="@(category == ViewBag.SelectedCategory
        ? "active": "")">
        <a class="btn btn-block"
           asp-action="Index" asp-controller="Home"
           asp-route-category="@category"
           asp-route-productPage="1">
            @category
        </a>
    </li>
}
